= form_for(@note,:html => {:class => "note"} )do |f|
  -if @note.errors.any?
    #error_explanation
      %h2= "#{pluralize(@note.errors.count, "error")} prohibited this note from being saved:"
      %ul
        - @note.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :content,:class => 'label_content'
    = f.text_area :content
  .actions
    = f.submit 'Save'
