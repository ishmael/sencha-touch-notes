.login-box.main-content
  %header
    %h2 Sign up
  %section
    - if notice
      .message.info
        = notice
    - if alert
      .message.error
        = alert
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "clearfix devise"}) do |f|
      - if defined? devise_error_messages
        .message.error
          = devise_error_messages!
      %p
        = f.email_field :email,:id=> 'email',:class=> 'full', :placeholder => "Email", :required => "required"
      %p
        = f.password_field :password, :id => 'password' ,:class =>'full', :placeholder => "Password", :required => "required"
      %p
        = f.password_field :password_confirmation , :id => 'password_confirmation',:class =>'full', :placeholder => "Password", :required => "required"
      %p.clearfix
        - if devise_mapping.rememberable?
          %span.fl
            = f.check_box :remember_me ,:id => 'remember'
            %label.choice{:for => "remember"} Remember me
        %button.button.button-gray.fr{:type => "submit"} Sign up
    %ul
      %li
        %strong> HELP!
        %br/
        = render :partial => "devise/shared/links"
